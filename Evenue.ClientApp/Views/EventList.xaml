                <Rectangle Width="150" Height="100" Fill="Blue"></Rectangle>
                <TextBlock HorizontalAlignment="Center" FontSize="18" Text="{Binding title}"></TextBlock>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="15">Location :</TextBlock>
                    <TextBlock FontSize="15" Text="Jakarta"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="15">Date :</TextBlock>
                    <TextBlock FontSize="15" Text="12/02/2015"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock FontSize="15">Description :</TextBlock>
