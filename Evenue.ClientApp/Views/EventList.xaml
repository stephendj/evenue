    <Grid Background="{StaticResource AppBarBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ctl:PageHeader>
            <ctl:PageHeader.HeaderContent>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="title" Style="{ThemeResource PageTitleTextBlockStyle}" Text="EVENT LIST" HorizontalAlignment="Left"/>
                    <StackPanel Grid.Column="1" Margin="8 8 8 8" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock xml:space="preserve" FontFamily="Segoe UI" VerticalAlignment="Center" FontSize="16">Search Location :</TextBlock>
                        <TextBox Width="200" x:Name="location"></TextBox>
                    </StackPanel>
                </Grid>
            </ctl:PageHeader.HeaderContent>
        </ctl:PageHeader>

